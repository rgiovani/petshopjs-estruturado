<%- contentFor('body') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <div style="height: 40px"></div>

    <a href="/endereco">
        <button type="button" class="btn btn-primary botao_voltar"> 
            <i class="fa fa-mail-reply" style="font-size: 25px;"></i>
            Voltar
        </button>
    </a>
    
    <h1>Novo Endereco</h1>

    <form action="/Endereco/add" method="POST">
        <div class="form row">
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="rua" placeholder="Rua"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="numero" placeholder="Numero"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="bairro" placeholder="Bairro"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="cep" placeholder="Cep"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="cidade" placeholder="Cidade"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="estado" placeholder="Estado"/>
            </div>
            <div class = "form-group col-4">
                <input type = "text" class="form-control" name="complemento" placeholder="Complemento"/>
            </div>
        </div>

        <button type="submit" class="btn btn-primary botao_salvar">
            Salvar 
            <i class="fa fa-check" style="font-size: 14px"></i>
        </button>
    </form>

<style>
    .botao_voltar {
        background-color: white;
        border: none;
        color: #f44336;
        padding: 6px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_salvar {
        background-color: #4BB462;
        border: none;
        color: white;
        padding: 9px 14px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    } 
</style>


