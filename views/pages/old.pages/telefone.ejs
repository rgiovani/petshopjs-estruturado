<%- contentFor('body') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <div style="height: 40px"></div>

  <h1 style="height: 80px"> Telefones</h1>

  <div style="height: 80px">
    <a href="/telefoneForm">
      <button type="button" class="btn btn-primary botao_novo">
        <i class = "fa fa-plus" style="font-size:13px"></i>
          Novo
      </button>
    </a>
  </div>

  <div class="row">
    <% for(var telefone of telefones) { %>
      <div class="col-xs-1-12 p-2">
        <div class="card ">
          <div class="card" style="padding: 12px 12px">
            <div style="align-self: center;">
              <img src="https://picsum.photos/id/237/200/300" height=300 width=210 />
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= telefone.ddi %> <%= telefone.ddd %></h5>
            <p class="card-text"> <%= telefone.numero %></p>
            <p class="card-text"><%= telefone.descricao %></p>
            
            <a href="#" class="btn btn-primary" style="border:none">
              <i class="fa fa-pencil"></i>
                Editar
            </a>
            
            <button type="submit" class="btn btn-primary" style="background-color:red; border:none">
                <i class="fa fa-remove"></i>
                   Excluir
            </button>
            
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <style>
    .botao_novo {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_incio {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_voltar_fornecedor {
            background-color: #008CBA;
            border: none;
            color: white;
            padding: 8px 7px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
  </style>