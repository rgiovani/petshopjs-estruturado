<%- contentFor('body') %>

    <a href="/">
      <button type="button" class="btn btn-primary botaoVoltarCliente"> < Clientes </button>
    </a>
  
    <div style="height: 40px"></div>
  
    <h1 style="height: 80px"> Fornecedores</h1>
  
    <div style="height: 80px">
        <a href="/form">
            <button type="button" class="btn btn-primary botao">+ Novo</button>
        </a>
    </div>

    <div class="row">
    <% for(var fornecedor of fornecedores) { %>
        <div class="col-xs-1-12 p-2">
        <div class="card">
            <img class="card-img-top" src="https://picsum.photos/id/237/200/300" />
            <div class="card-body">
            <h5 class="card-title"><%= fornecedor.nome %> <%= fornecedor.sobrenome %></h5>
            <p class="card-text"> <%= fornecedor.email %></p>
            <p class="card-text"><%= fornecedor.cnpj %></p>
            <a href="#" class="btn btn-primary">Editar</a>
            </div>
        </div>
        </div>
    <% } %>
    </div>

    <style>
        .botao {
            background-color: #4CAF50; 
            border: none;
            color: white;
            padding: 4px 8px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        .botaoVoltarCliente {
            background-color: #008CBA; 
            border: none;
            color: white;
            padding: 8px 7px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

    </style>