<%- contentFor('body') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <div style="height: 40px"></div>

  <h1 style="height: 80px"> Clientes</h1>

  <div style="height: 80px">
    <a href="/clienteForm">
      <button type="button" class="btn btn-primary botao_novo">
        <i class = "fa fa-plus" style="font-size:13px"></i>
          Novo
      </button>
    </a>
  </div>

  <div class="row">
    <% for(var cliente of clientes) { %>
      <div class="col-xs-1-12 p-2">
        <div class="card ">
          <img class="card-img-top" src="https://picsum.photos/id/237/200/300" />
          <div class="card-body">
            <h5 class="card-title"><%= cliente.nome %> <%= cliente.sobrenome %></h5>
            <p class="card-text"> <%= cliente.email %></p>
            <p class="card-text"><%= cliente.cpf %></p>
            
            <a href="#" class="btn btn-primary" style="border:none">
              <i class="fa fa-pencil"></i>
                Editar
            </a>
            <a href="#" class="btn btn-primary" style="background-color:red; border:none">
              <i class="fa fa-remove"></i>
                Excluir
            </a>

          </div>
        </div>
      </div>
    <% } %>
  </div>

  <style>
    .botao_novo {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_incio {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_voltar_fornecedor {
            background-color: #008CBA;
            border: none;
            color: white;
            padding: 8px 7px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
  </style>