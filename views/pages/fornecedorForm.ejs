        <h5>Para cadastrar um novo fornecedor preencha os dados abaixo:</h5>
        <form action="/clientes/add" method="POST">
            <div class="form row">
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="nome" placeholder="Nome"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="sobrenome" placeholder="Sobrenome"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="email" placeholder="Email"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="cnpj" placeholder="Cpf"/>
                </div>
            </div>
            
            <br>
    
            <h5>Endereco: </h5>
            <div class="form row">
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="rua" placeholder="Rua"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="numeroResidencia" placeholder="Numero da residencia"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="bairro" placeholder="Bairro"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="cep" placeholder="Cep"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="cidade" placeholder="Cidade"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="estado" placeholder="Estado"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="complemento" placeholder="Complemento"/>
                </div>
            </div>
            
            <br>
            <h5>Telefone: </h5>
            <div class="form row">
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="ddi" placeholder="DDI"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="ddd" placeholder="DDD"/>
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="numeroTelefone" placeholder="Numero"/>            
                </div>
                <div class = "form-group col-4">
                    <input type = "text" class="form-control" name="descricao" placeholder="Descricao"/>            
                </div>
            </div>

        <button type="submit" class="btn btn-primary botao_salvar">
            Salvar 
            <i class="fa fa-check" style="font-size: 14px"></i>
        </button>
    </form>

