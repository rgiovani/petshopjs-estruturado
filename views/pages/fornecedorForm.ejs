<%- contentFor('body') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">    
   
    <div style="height: 40px"></div>

    <a href="/fornecedores">
        <button type="button" class="btn btn-primary botao_voltar"> 
            <i class="fa fa-mail-reply" style="font-size: 25px;"></i>
            Voltar
        </button>
    </a>
    
    <h1>Novo Fornecedor</h1>

    <form action="/fornecedores/add" method="POST">
        <br>
        <br>
        <h5>Preencha os dados abaixo corretamente:</h5>
        <form action="/clientes/add" method="POST">

            <div class="form row">
                <div class = "form-group col-4">
                    <label for="nome">Nome:</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="" placeholder="Insira o nome">
                </div>
    
                <div class = "form-group col-4">
                    <label for="sobrenome">Sobrenome:</label>
                    <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="" placeholder="Insira o sobrenome">
                </div>
                <div class = "form-group col-4">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control" id="email" name="email" value="" placeholder="Insira o email">
                </div>
                <div class = "form-group col-4">
                    <label for="cnpj">Cnpj:</label>
                    <input type="number" class="form-control" id="cnpj" name="cnpj" value="" placeholder="Insira o numero do cnpj"> 
                </div>
            </div>
            
            <br>
            <h5>Endereco: </h5>
            <div class="form row">
    
                <div class = "form-group col-4">
                    <label for="rua">Rua:</label>
                    <input type="text" class="form-control" id="rua" name="rua" value="" placeholder="Insira o nome da rua"> 
                </div>
                <div class = "form-group col-4">
                    <label for="numeroResidencia">Numero da Residencia:</label>
                    <input type="number" class="form-control" id="numeroResidencia" name="numeroResidencia" value="" placeholder="Insira o numero da residencia"> 
                </div>
                <div class = "form-group col-4">
                    <label for="bairro">Nome do Bairro:</label>
                    <input type="text" class="form-control" id="bairro" name="bairro" value="" placeholder="Insira o nome do Bairro"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="cep">Cep:</label>
                    <input type="number" class="form-control" id="cep" name="cep" value="" placeholder="Insira o cep"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="cidade">Cidade:</label>
                    <input type="text" class="form-control" id="cidade" name="cidade" value="" placeholder="Insira o nome da cidade"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="estado">Estado:</label>
                    <input type="text" class="form-control" id="estado" name="estado" value="" placeholder="Insira o estado"> 
                </div>
                <div class = "form-group col-4">
                    <label for="complemento">Complemento:</label>
                    <input type="text" class="form-control" id="complemento" name="complemento" value="" placeholder="Insira o complemento"> 
                </div>
            </div>
            
            <br>
            <h5>Telefone: </h5>
            <div class="form row">
    
                <div class = "form-group col-4">
                    <label for="ddi">DDI:</label>
                    <input type="number" class="form-control" id="ddi" name="ddi" value="" placeholder="Insira o ddi (ex: 55)"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="ddd">DDD:</label>
                    <input type="number" class="form-control" id="ddd" name="ddd" value="" placeholder="Insira o ddd (ex: 44)"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="numero">Numero:</label>
                    <input type="number" class="form-control" id="numero" name="numero" value="" placeholder="Insira o numero (ex: 99991111)"> 
                </div>
    
                <div class = "form-group col-4">
                    <label for="descricao">Descricao:</label>
                    <input type="text" class="form-control" id="descricao" name="descricao" value="" placeholder="Insira a Descricao"> 
                </div>
    
            </div>

        <button type="submit" class="btn btn-primary botao_salvar">
            Salvar 
            <i class="fa fa-check" style="font-size: 14px"></i>
        </button>
    </form>

<style>
    .botao_voltar {
        background-color: white;
        border: none;
        color: #f44336;
        padding: 6px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .botao_salvar {
        background-color: #4BB462;
        border: none;
        color: white;
        padding: 9px 14px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }    
</style>


